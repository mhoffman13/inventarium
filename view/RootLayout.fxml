<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="600.0" prefWidth="800.0" stylesheets="@blue-theme.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="inventarium.view.RootController">
	<top>
		<MenuBar BorderPane.alignment="CENTER">
   <menus>
   			<Menu fx:id="selectedMenu" text="Menu">
      <items>
      				<MenuItem mnemonicParsing="false" onAction="#showInventoryOverview" text="Inventory" />
      				<MenuItem mnemonicParsing="false" onAction="#showProductOverview" text="Products" />
      				<MenuItem mnemonicParsing="false" onAction="#showVendorOverview" text="Vendors" />
      				<MenuItem mnemonicParsing="false" onAction="#showCategoryOverview" text="Categories" />
      </items>
   			</Menu>
   </menus>
		</MenuBar>
	</top>
</BorderPane>
